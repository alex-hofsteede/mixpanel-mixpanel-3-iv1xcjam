.mp-drawer
  height 0
  overflow hidden
  position absolute
  right 0
  top 0
  width 0
  z-index 100

  .mp-drawer-content
    background-color #fff
    min-height 100%
    overflow hidden
    padding 0
    position absolute
    right 0
    top 0

  .mp-drawer-bg
    background-color #fff
    height 100%
    position fixed
    right 0

  .mp-drawer-bg, .mp-drawer-content
    transform translateX(100%)
    transition transform 0.15s

  &.open
    height 100%
    overflow initial
    width 100%

    .mp-drawer-overlay
      background-color #3c4c63
      height 100%
      opacity 0.8
      position fixed
      width 100%

    .mp-drawer-bg, .mp-drawer-content
      transform translateX(0%)
      &.closing
        transform translateX(100%)
